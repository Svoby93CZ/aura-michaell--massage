# ============================================
# SECURITY HEADERS
# ============================================

# Ochrana proti clickjacking útokům
Header always set X-Frame-Options "SAMEORIGIN"

# Ochrana proti XSS útokům
Header always set X-XSS-Protection "1; mode=block"

# Zabránění MIME type sniffing
Header always set X-Content-Type-Options "nosniff"

# Strict Transport Security (HSTS) - vyžaduje HTTPS
# Odkomentujte, až budete mít SSL certifikát
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Content Security Policy - pokročilá ochrana
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://counter.websiteout.com https://widgets.sociablekit.com https://static.elfsight.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-src https://www.google.com https://aura-michaell-massage.reservio.com;"

# Referrer Policy
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Permissions Policy (dříve Feature Policy)
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"

# ============================================
# HTTPS REDIRECT - Přesměrování na HTTPS
# ============================================
# Odkomentujte, až budete mít SSL certifikát

# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ============================================
# OCHRANA CITLIVÝCH SOUBORŮ
# ============================================

# Zakázat přístup k citlivým souborům
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Ochrana konfiguračních souborů
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|bak|backup|old)$">
    Require all denied
</FilesMatch>

# ============================================
# KOMPRESE A CACHING
# ============================================

# GZIP komprese pro rychlejší načítání
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching - zrychlení opakovaných návštěv
<IfModule mod_expires.c>
    ExpiresActive On

    # Obrázky
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS a JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonty
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"

    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ============================================
# ZABRÁNĚNÍ DIRECTORY LISTING
# ============================================
Options -Indexes

# ============================================
# VLASTNÍ CHYBOVÉ STRÁNKY (volitelné)
# ============================================
# ErrorDocument 404 /404.html
# ErrorDocument 403 /403.html
# ErrorDocument 500 /500.html

# ============================================
# OCHRANA PROTI HOTLINKING (krádež obrázků)
# ============================================
RewriteEngine On
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?aura-michaell-massage\.cz [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?.*\.reservio\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,L]

# ============================================
# OCHRANA PROTI BOTŮM A ÚTOKŮM
# ============================================

# Blokování známých škodlivých user agents
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^(-|Wget|curl|libwww-perl|Python|nikto|scan) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Limit velikosti požadavku (ochrana proti DDoS)
LimitRequestBody 10485760

# ============================================
# UTF-8 ENCODING
# ============================================
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .rss .atom
